    "Action",
    "action",
    "Actions",
    "actions",
    "download",
    "file"
  ],
  "author": "Carlos Pereira Atencio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SettingDust/download-files-action/issues"
  },
  "homepage": "https://github.com/SettingDust/download-files-action#readme",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "node-downloader-helper": "^2.1.1"
  },
  "devDependencies": {
    "@types/download": "^8.0.1",
    "@types/node": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-github": "^4.3.5",
