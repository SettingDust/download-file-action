  "scripts": {
    "build": "tsc",
    "package": "npm run build && ncc build ./build/src -o ./dist",
    "lint": "eslint src/**/*.ts",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SettingDust/download-files-action.git"
  },
  "keywords": [
    "GitHub",
